doctype html 
html
    head
        title= username + "'s Profile"

        style
             include ../public/publicprofile.css

        script
             include ../public/publicprofile.js

    body

    .page_box
        .profile_Info
            h2#username= username
            h2= "Posts " + totalPosts
            h2= "Likes " + totalLikes
            if signedIn == true
                h2= "Signed In As " + loggedInUN
            else 
                button#signin Sign In To Like Posts
            
        .posts
            each post in posts
                .userpost
                    .imgCon(id=post.id)
                        img.postImg(src=post.url alt=post.caption + ' url not loadable')
                        if signedIn == true && username != loggedInUN
                            img.likebuttons(src='../public/like.png' alt='Like Post')
                    h3.postCaption= post.caption
                    